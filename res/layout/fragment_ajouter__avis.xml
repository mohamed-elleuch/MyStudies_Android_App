<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.master.henda.mes_etudes.Consulter_Avis">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type d'avis :"
                android:id="@+id/txtType"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typedavis"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"
                android:entries="@array/typeavis"
                android:prompt="@string/typeeavis"
                style="@style/spinnerItemStyle" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matiére :"
                android:id="@+id/txtmatiere"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/matiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'avis :"
                android:id="@+id/txtdate"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/dateAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horaire d'avis :"
                android:id="@+id/txthoraire"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/horaireAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>






        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durée d'avis :"
                android:id="@+id/txtdurée"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/duréeAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minutes "
                android:id="@+id/txtmin"
                android:layout_marginLeft = "80dp"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lieu d'avis :"
                android:id="@+id/txtlieu"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />


            <EditText
                android:id="@+id/lieuAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filière :"
                android:id="@+id/txtfiliere"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="#01579B"
                android:textStyle="bold"
                />


            <EditText
                android:id="@+id/filiereAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft = "30dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groupe :"
                    android:id="@+id/txtgroupe"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textColor="#01579B"
                    android:textStyle="bold"
                    />


                <EditText
                    android:id="@+id/groupeAvis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft = "30dp"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>



        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:id="@+id/ajouter"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#01579B"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"/>



    </LinearLayout>
</ScrollView>
</FrameLayout>
