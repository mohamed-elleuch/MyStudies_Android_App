<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:background="#01579B"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/logo_splash"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            />

        <TextView
            android:text="Bienvenue"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textColor="#FFFFFF"
            android:text="vous voulez s&apos;authentifier en tant que"
            android:id="@+id/textView"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/btn_enseignant"
                    android:src="@drawable/prof"
                    android:background="@null"
                    android:layout_marginTop="67dp"

                    />

                <TextView
                    android:id="@+id/enseignant"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Enseignant "
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageButton"
                android:background="@null"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                 >

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/btn_etudiant"
                    android:src="@drawable/etudiant"
                    android:background="@null"
                    android:layout_marginTop="67dp"

                    />

                <TextView
                    android:id="@+id/etudiant"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Etudiant "
                    android:layout_marginLeft="20dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
