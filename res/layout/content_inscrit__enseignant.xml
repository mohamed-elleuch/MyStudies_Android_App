<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.master.henda.mes_etudes.Inscrit_Enseignant"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_inscrit__enseignant">





        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/scrollView"
                android:layout_toEndOf="@+id/scrollView"
                android:background="#FFFFFF">




                <TextView
                    android:id="@+id/t_cin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="CIN :"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />




                <EditText
                    android:id="@+id/CIN"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/t_NumTel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="N° Téléphone Mobile :"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />


                <EditText
                    android:id="@+id/NumTel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/t_Mdp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe :"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />



                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    />



                <TextView
                    android:id="@+id/t_ConfMdp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="confirmer mot de passe :"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:inputType="textCapWords"
                    android:textColor="#01579B"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/confirm_mdp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    />


                <!-- Login Button -->



                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:background="#03A9F4"
                    android:text="Inscription"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <!-- Link to Login Screen -->

                <Button
                    android:id="@+id/btnLinkToLoginScreen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:text="vous etes déja inscrit! s'authentifier"
                    android:textAllCaps="false"
                    android:textColor="#B3E5FC"
                    android:textSize="20dp"
                    android:textStyle="normal"/>




            </LinearLayout>

        </ScrollView>
    </RelativeLayout>



