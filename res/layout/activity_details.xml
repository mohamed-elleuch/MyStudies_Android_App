<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/photo_fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
                android:src="@drawable/prof" />

            <TextView
                android:id="@+id/nom_fac"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:text="nom_fac"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff" />

        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="#2196F3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/photo_adresse"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/adr_fac"
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="adresse_fac"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp">

            <ImageView
                android:id="@+id/photo_mail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/mail_fac"
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="mail_fac"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp">

            <ImageView
                android:id="@+id/photo_tel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/abc_background_cache_hint_selector_material_dark"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tel_fac"
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="tel_fac"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff" />

        </LinearLayout>


        <View
            android:id="@+id/view1"
            android:layout_width="260dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#2196F3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:text="Description"
                />

            <TextView
                android:id="@+id/desc_fac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="tel_fac"
                android:textAlignment="center"
                android:textColorHint="#ffffff"
                android:textColorLink="#ffffff" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>